NAME = libftprintf.a
CC = cc
CFLAGS = -Wall -Werror -Wextra

SRCS = ft_printf.c utils.c
OBJS = $(SRCS:.c=.o)

SILENT = @

################################################################################
#                                                                              #
#	                                Rules                                      #
#                                                                              #
################################################################################

all: $(NAME)

$(NAME): $(OBJS)
	$(SILENT)@ar rcs $@ $(OBJS)
	@echo "███████╗████████╗░░░░░░██████╗░██████╗░██╗███╗░░██╗████████╗███████╗"
	@echo "██╔════╝╚══██╔══╝░░░░░░██╔══██╗██╔══██╗██║████╗░██║╚══██╔══╝██╔════╝"
	@echo "█████╗░░░░░██║░░░█████╗██████╔╝██████╔╝██║██╔██╗██║░░░██║░░░█████╗░░"
	@echo "██╔══╝░░░░░██║░░░╚════╝██╔═══╝░██╔══██╗██║██║╚████║░░░██║░░░██╔══╝░░"
	@echo "██║░░░░░░░░██║░░░░░░░░░██║░░░░░██║░░██║██║██║░╚███║░░░██║░░░██║░░░░░"
	@echo "╚═╝░░░░░░░░╚═╝░░░░░░░░░╚═╝░░░░░╚═╝░░╚═╝╚═╝╚═╝░░╚══╝░░░╚═╝░░░╚═╝░░░░░"

%.o: %.c
	$(SILENT)$(CC) $(CFLAGS) -c $< -o $@ 
	
clean:
	$(SILENT)@rm -f $(OBJS)

fclean: clean
	$(SILENT)@rm -f $(NAME)
	
re: fclean all
